{{ 'section-app-download-banner.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #AppDownloadBanner-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  {% if section.settings.background_image != blank %}
    .banner-text-block {
        background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)),
                            url({{ section.settings.background_image | img_url: '1600x' }});
        background-repeat: no-repeat;
        background-size: cover;
        border-radius: 16px;
        background-position: center;
    }
  {% endif %}
{%- endstyle -%}

<section
  id="AppDownloadBanner-{{ section.id }}"
  class="app-download-banner"
>
  <div
    class="page-width app-banner-content"
  >
    <div
      class="banner-text-block"
    >
      <div class="banner-content__container">
        {% if section.settings.title != blank %}
          <h2 class="banner-title">{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="banner-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}
        <div class="download-buttons">
          {% if section.settings.ios_label != blank %}
            <a href="{{ section.settings.ios_link }}" class="download-btn">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 384 512" width="20" height="20" fill="currentColor">
                <path d="M318.7 268.7c-.2-36.7 16-64.7 50.2-85.4-18.8-27.3-46.9-42.3-84.8-45-35.7-2.6-74.7 20.9-88.6 20.9-14.4 0-47.6-19.8-73.8-19.2C70.4 142.1 15.3 184.3 15.3 266c0 30.2 5.5 61.7 16.6 94.2 14.7 42.4 67.8 146.4 123.1 145.2 28.9-.6 49.4-20.3 77.7-20.3 27.8 0 46.4 20.3 73.8 20 56.1-.9 103.3-93.5 117.5-136.2-74.4-35.4-105.3-82-105.3-140.2zM253.8 79.1c27.2-32.8 24.7-62.6 24-73.1-24.2 1.4-52 16.2-68.8 36.2-17.9 21.1-27.1 46.9-25 74.4 26.2 2 51-11.3 69.8-37.5z"/>
              </svg>
              {{ section.settings.ios_label }}
            </a>
          {% endif %}
          {% if section.settings.android_label != blank %}
            <a href="{{ section.settings.android_link }}" class="download-btn">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" width="20" height="20" fill="currentColor">
                <path d="M390.7 121.2L419.2 66c1.2-2.3.2-5.2-2.1-6.4s-5.2-.2-6.4 2.1l-29 54.9c-35.5-16.2-75.5-25.3-117.7-25.3s-82.2 9.1-117.7 25.3l-29-54.9c-1.2-2.3-4.1-3.2-6.4-2.1s-3.3 4.1-2.1 6.4l28.5 55.2c-63.2 31.8-106.3 91.3-106.3 159.1v160.9c0 17.1 13.9 31 31 31h15.5c17.1 0 31-13.9 31-31v-160.9c0-17.1-13.9-31-31-31h-3.2c15.1-38.4 48.1-69.5 91.2-87.1l25.2 47.7c1.2 2.3 4.1 3.2 6.4 2.1s3.3-4.1 2.1-6.4l-25.3-47.7c29.2-12.3 62.1-19.1 97.4-19.1s68.2 6.8 97.4 19.1l-25.3 47.7c-1.2 2.3-.2 5.2 2.1 6.4s5.2.2 6.4-2.1l25.2-47.7c43.1 17.6 76.1 48.7 91.2 87.1h-3.2c-17.1 0-31 13.9-31 31v160.9c0 17.1 13.9 31 31 31h15.5c17.1 0 31-13.9 31-31V280.3c0-67.8-43.1-127.3-106.3-159.1z"/>
              </svg>
              {{ section.settings.android_label }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "App Download Banner",
  "tag": "section",
  "class": "app-download-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Descarregue a App My Repsol"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Mais vantagens na sua nova App: obtenha e utilize saldo nos seus produtos e servi√ßos."
    },
    {
      "type": "text",
      "id": "ios_label",
      "label": "iOS Button Label",
      "default": "Download iOS"
    },
    {
      "type": "url",
      "id": "ios_link",
      "label": "iOS Download Link"
    },
    {
      "type": "text",
      "id": "android_label",
      "label": "Android Button Label",
      "default": "Download Android"
    },
    {
      "type": "url",
      "id": "android_link",
      "label": "Android Download Link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "App Download Banner"
    }
  ]
}
{% endschema %}
