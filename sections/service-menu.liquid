{{ 'service-menu.css' | asset_url | stylesheet_tag }}

<style>
  .service-menu.section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
</style>

<section class="service-menu section-{{ section.id }}">
  <div class="page-width">
    <div class="about-us__stats-grid">
      {% for block in section.blocks %}
        <div class="about-us__stats-item" {{ block.shopify_attributes }}>
          <div class="about-us__stats-icon">
            {% if block.settings.icon != blank %}
              {{ block.settings.icon }}
            {% else %}
              <div class="default-icon"></div>
            {% endif %}
          </div>

          {% if block.settings.number != blank %}
            <p class="about-us__stats-number">{{ block.settings.number }}</p>
          {% endif %}

          {% if block.settings.label != blank %}
            <p class="about-us__stats-label">{{ block.settings.label }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Service Menu",
  "tag": "section",
  "class": "service-menu",
  "settings": [
    {
      "type": "header",
      "content": "Statistics Section"
    },
    {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#FFF"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat Item",
      "settings": [
        {
          "type": "liquid",
          "id": "icon",
          "label": "Icon (SVG or PNG)"
        },
        {
          "type": "text",
          "id": "number",
          "label": "Number / Value",
          "default": "13"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Postos de Abastecimento"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Service Menu",
      "blocks": [
        { "type": "stat", "settings": { "icon": "", "number": "13", "label": "Postos de Abastecimento" } },
        { "type": "stat", "settings": { "icon": "", "number": "500+", "label": "Clientes Diários" } },
        { "type": "stat", "settings": { "icon": "", "number": "24/7", "label": "Serviço Disponível" } },
        { "type": "stat", "settings": { "icon": "", "number": "25+", "label": "Anos de Excelência" } }
      ]
    }
  ]
}
{% endschema %}
