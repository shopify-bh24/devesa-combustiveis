{{ 'about-us-values.css' | asset_url | stylesheet_tag }}

<style>
  .about-us__values.section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }
</style>

<section class="about-us__values section-{{ section.id }}">
  <div class="page-width">
    <div class="about-us__values-header">
      {% if section.settings.subtitle != blank %}
        <p class="about-us__values-subtitle">
          <span class="icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="lucide lucide-heart w-5 h-5"
              aria-hidden="true"
            >
              <path d="M2 9.5a5.5 5.5 0 0 1 9.591-3.676.56.56 0 0 0 .818 0A5.49 5.49 0 0 1 22 9.5c0 2.29-1.5 4-3 5.5l-5.492 5.313a2 2 0 0 1-3 .019L5 15c-1.5-1.5-3-3.2-3-5.5"></path>
            </svg>
          </span>
          {{ section.settings.subtitle }}
        </p>
      {% endif %}
      {% if section.settings.title != blank %}
        <h2 class="about-us__values-title">{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.text != blank %}
        <div class="about-us__values-text">{{ section.settings.text }}</div>
      {% endif %}
    </div>

    <div class="about-us__values-grid">
      {% for block in section.blocks %}
        <div class="about-us__values-item" {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <div class="values-icon">
              {{ block.settings.icon }}
            </div>
          {% endif %}
          <h3 class="values-title">{{ block.settings.title }}</h3>
          <p class="values-desc">{{ block.settings.desc }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Us Values",
  "tag": "section",
  "class": "about-us-values",
  "settings": [
    { "type": "text", "id": "subtitle", "label": "Subtitle", "default": "Os Nossos Valores" },
    { "type": "text", "id": "title", "label": "Title", "default": "O Que Nos Impulsiona" },
    {
      "type": "richtext",
      "id": "text",
      "label": "Intro Text",
      "default": "<p>O nosso compromisso com a excelência é construído sobre estes princípios fundamentais que orientam tudo o que fazemos.</p>"
    },
    {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#FFF"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "blocks": [
    {
      "type": "value",
      "name": "Value Card",
      "settings": [
        { "type": "liquid", "id": "icon", "label": "Icon (SVG or PNG)" },
        { "type": "text", "id": "title", "label": "Title", "default": "Segurança em Primeiro Lugar" },
        {
          "type": "textarea",
          "id": "desc",
          "label": "Description",
          "default": "Mantemos os mais elevados padrões de segurança em todos os nossos postos, garantindo operações seguras para os nossos clientes e membros da equipa."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "About Us Values",
      "blocks": [
        {
          "type": "value",
          "settings": {
            "title": "Segurança em Primeiro Lugar",
            "desc": "Mantemos os mais elevados padrões de segurança em todos os nossos postos, garantindo operações seguras para os nossos clientes e membros da equipa."
          }
        },
        {
          "type": "value",
          "settings": {
            "title": "Garantia de Qualidade",
            "desc": "Qualidade premium de combustível garantida em cada bomba, rigorosamente testado para cumprir e superar os padrões da indústria."
          }
        },
        {
          "type": "value",
          "settings": {
            "title": "Foco no Cliente",
            "desc": "A sua satisfação é a nossa prioridade. Dedicamo-nos a fornecer um serviço amigável e uma experiência perfeita."
          }
        },
        {
          "type": "value",
          "settings": {
            "title": "Inovação",
            "desc": "Atualizamos continuamente as nossas instalações com a mais recente tecnologia para servi-lo melhor e de forma mais eficiente."
          }
        },
        {
          "type": "value",
          "settings": {
            "title": "Sustentabilidade",
            "desc": "Comprometidos com a responsabilidade ambiental através de práticas ecológicas e iniciativas de melhoria contínua."
          }
        },
        {
          "type": "value",
          "settings": {
            "title": "Parceiro da Comunidade",
            "desc": "Orgulhosos de apoiar as comunidades locais e contribuir para o crescimento e desenvolvimento económico regional."
          }
        }
      ]
    }
  ]
}
{% endschema %}
