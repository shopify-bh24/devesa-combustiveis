{{ 'about-us-cta.css' | asset_url | stylesheet_tag }}

<style>
  .about-us__cta.section-{{ section.id }}{
    background-color: {{ section.settings.bg_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>

<section class="about-us__cta section-{{ section.id }}">
  <div class="page-width">
    <div class="about-us__cta-inner">
      {% if section.settings.title != blank %}
        <h2 class="about-us__cta-title">{{ section.settings.title }}</h2>
      {% endif %}

      {% if section.settings.text != blank %}
        <p class="about-us__cta-text">{{ section.settings.text }}</p>
      {% endif %}

      <div class="about-us__cta-buttons">
        {% if section.settings.primary_btn_text != blank %}
          <a href="{{ section.settings.primary_btn_link }}" class="btn btn--primary">
            <span class="icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-map-pin w-4 h-4 mr-2" aria-hidden="true"><path d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"></path><circle cx="12" cy="10" r="3"></circle></svg></span> {{ section.settings.primary_btn_text }}
          </a>
        {% endif %}
        {% if section.settings.secondary_btn_text != blank %}
          <a href="{{ section.settings.secondary_btn_link }}" class="btn btn--secondary">
            {{ section.settings.secondary_btn_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Us CTA",
  "tag": "section",
  "class": "about-us-cta",
  "settings": [
    { "type": "text", "id": "title", "label": "Title", "default": "Visite-nos Hoje" },
    {
      "type": "text",
      "id": "text",
      "label": "Subtitle",
      "default": "Experimente a diferença em qualquer uma das nossas 13 localizações. Estamos aqui para servi-lo com combustível de qualidade e serviço excecional, sempre."
    },
    { "type": "text", "id": "primary_btn_text", "label": "Primary Button Text", "default": "Encontre um Posto" },
    { "type": "url", "id": "primary_btn_link", "label": "Primary Button Link" },
    { "type": "text", "id": "secondary_btn_text", "label": "Secondary Button Text", "default": "Saiba Mais" },
    { "type": "url", "id": "secondary_btn_link", "label": "Secondary Button Link" },
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#fff" },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [{ "name": "About Us CTA", "settings": {} }]
}
{% endschema %}
