{{ 'section-image-banner.css' | asset_url | stylesheet_tag }}

<style>
.hero-banner {
  position: relative;
  overflow: hidden;
  height: 400px;
}

@media (min-width: 450px) {
  .hero-banner {
    height: {{ section.settings.hero_height }}px;
  }
}

.hero-banner__media {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.hero-banner__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}

.hero-banner__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0.4) 60%, rgba(0,0,0,0.1) 100%);
  z-index: 1;
  pointer-events: none;
}



.hero-banner__content {
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: {{ section.settings.text_alignment }};
  text-align: {{ section.settings.text_alignment }};
  z-index: 2;
  color: #fff;
  padding: 0 1.5rem;
}

.hero-banner__subheading {
  /* font-size: 1.25rem; */
  margin-bottom: 0.5rem;
  font-size: 2rem;
  color: white;
}

.hero-banner__heading {
  /* font-size: 3rem; */
  font-weight: 700;
  margin: 1rem 0rem;
  color: white;
}

.hero-banner__buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  margin-top: 1.5rem;
}

/* Primary Button */
.hero-button--primary {
  padding: 1rem 2rem;
  border-radius: 30px;
  border: 1px solid #ff9c44;
  background: #ff9c44;
  color: white;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s;
  text-decoration: none;

}

/* .button--primary:hover {
  background: transparent;
  color: #ff9c44;
} */

/* Secondary Button */
.hero-button--secondary {
  padding: 1rem 2rem;
  border-radius: 30px;
  border: 1px solid #ff9c44;
  background: transparent;
  color: #ff9c44;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s;
  text-decoration: none;
}

.hero-button--secondary:hover {
  background: #ff9c44;
  color: white;
}
</style>

<section class="hero-banner section">
    <div class="hero-banner__media">
        {% if section.settings.image != blank %}
          {{
            section.settings.image
            | image_url: width: 3840
            | image_tag: alt: section.settings.heading, loading: 'eager', sizes: '100vw', class: 'hero-banner__image'
          }}
        {% else %}
          {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
        <div class="hero-banner__overlay">.</div>
      </div>
      
      

  <div class="hero-banner__content page-width">
    {% if section.settings.subheading != blank %}
      <p class="hero-banner__subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
    {% endif %}

    <div class="hero-banner__buttons">
      {% if section.settings.primary_button_label != blank %}
        <a
          {% if section.settings.primary_button_link %}
            href="{{ section.settings.primary_button_link }}"
          {% else %}
            role="link" aria-disabled="true"
          {% endif %}
          class="{% if section.settings.primary_button_style_secondary %}hero-button--secondary{% else %}hero-button--primary{% endif %}"
        >
          {{ section.settings.primary_button_label }}
        </a>
      {% endif %}

      {% if section.settings.secondary_button_label != blank %}
        <a
          {% if section.settings.secondary_button_link %}
            href="{{ section.settings.secondary_button_link }}"
          {% else %}
            role="link" aria-disabled="true"
          {% endif %}
          class="{% if section.settings.secondary_button_style_secondary %}hero-button--secondary{% else %}hero-button--primary{% endif %}"
        >
          {{ section.settings.secondary_button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero banner",
  "tag": "section",
  "class": "section hero-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Combustíveis de confiança, atendimento próximo."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Encontre o posto mais perto de si."
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "center",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" }
      ]
    },
    {
      "type": "text",
      "id": "primary_button_label",
      "label": "Primary button label",
      "default": "Saiba mais"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary button link"
    },
    {
      "type": "checkbox",
      "id": "primary_button_style_secondary",
      "label": "Use secondary style for primary button",
      "default": false
    },
    {
      "type": "text",
      "id": "secondary_button_label",
      "label": "Secondary button label",
      "default": "Contacte-nos"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    },
    {
      "type": "checkbox",
      "id": "secondary_button_style_secondary",
      "label": "Use secondary style for secondary button",
      "default": true
    },
    {
      "type": "range",
      "id": "hero_height",
      "label": "Desktop Banner Height (px)",
      "min": 520,
      "max": 600,
      "step": 10,
      "default": 520
    }
  ],
  "presets": [
    {
      "name": "Hero banner"
    }
  ]
}
{% endschema %}
