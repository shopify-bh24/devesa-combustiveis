<style>
  .noticias-promocoes {
    padding: 50px 20px;
    text-align: center;
    background-color: #fff;
  }

  .noticias-promocoes__title {
    font-weight: 700;
    margin-bottom: 2rem;
  }

  .noticias-promocoes__tabs {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
    flex-wrap: wrap;
  }

  .noticias-promocoes__tab {
    padding: 1rem 2rem;
    border-radius: 30px;
    border: 1px solid #ff9c44;
    background: transparent;
    color: #ff9c44;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
  }

  .noticias-promocoes__tab.active {
    background: #ff9c44;
    color: white;
  }

  .noticias-promocoes__content {
    display: none;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .noticias-promocoes__content.active {
    display: flex;
  }

  .article-card {
    flex: 1 1 calc(33.333% - 1rem);
    max-width: 360px;
    background: #273154;
    border-radius: 16px;
    box-shadow: 0 8px 20px #00000080;
    overflow: hidden;
    text-align: left;
    transition: transform 0.2s ease;
  }

  .article-card:hover {
    transform: translateY(-3px);
  }

  .article-card img {
    width: 100%;
    aspect-ratio: 16 / 9;
    object-fit: cover;
  }

  .article-card .tag {
    color: #ff9c44;
    font-size: 12px;
    font-weight: 600;
    margin: 5px 16px;
    display: block;
    text-transform: uppercase;
  }

  .article-card h3 {
    margin: 4px 16px;
    min-height: 2.5rem;
    color: #fff;
  }

  .article-card a {
    display: inline-block;
    margin: 12px 16px 16px;
    color: #ff9c44;
    font-weight: 600;
    text-decoration: none;
  }

  .article-card a:hover {
    text-decoration: underline;
  }

  @media (max-width: 992px) {
    .article-card {
      flex: 1 1 calc(50% - 1rem);
    }
  }

  @media (max-width: 768px) {
    .article-card {
      flex: 1 1 100%;
      max-width: 100%;
    }
  }
</style>

<div class="noticias-promocoes">
    <div class="page-width">
  <h2 class="noticias-promocoes__title h1">{{ section.settings.title }}</h2>

  {% assign promo_articles = blogs.promotions.articles | slice: 0, 3 %}
  {% assign news_articles = blogs.news.articles | slice: 0, 3 %}

  <div class="noticias-promocoes__tabs">
    {% if promo_articles.size > 0 %}
      <button class="noticias-promocoes__tab active" data-tab="promocoes">{{ section.settings.promotion_button_text }}</button>
    {% endif %}
    {% if news_articles.size > 0 %}
      <button class="noticias-promocoes__tab {% if promo_articles.size == 0 %}active{% endif %}" data-tab="noticias">
        {{ section.settings.news_button_text }}
      </button>
    {% endif %}
  </div>

  {% if promo_articles.size > 0 %}
    <div id="promocoes" class="noticias-promocoes__content active">
      {% for article in promo_articles %}
        <div class="article-card">
          {% if article.image %}
            <img src="{{ article.image | image_url: width: 800 }}" alt="{{ article.title }}">
          {% endif %}
          <span class="tag">Promoção</span>
          <h3>{{ article.title | truncate: 60 }}</h3>
          <a href="{{ article.url }}">Saber mais →</a>
        </div>
      {% endfor %}
    </div>
  {% endif %}

  {% if news_articles.size > 0 %}
    <div id="noticias" class="noticias-promocoes__content {% if promo_articles.size == 0 %}active{% endif %}">
      {% for article in news_articles %}
        <div class="article-card">
          {% if article.image %}
            <img src="{{ article.image | image_url: width: 800 }}" alt="{{ article.title }}">
          {% endif %}
          <span class="tag">Notícia</span>
          <h3>{{ article.title | truncate: 60 }}</h3>
          <a href="{{ article.url }}">Saber mais →</a>
        </div>
      {% endfor %}
    </div>
  {% endif %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const tabs = document.querySelectorAll('.noticias-promocoes__tab');
    const contents = document.querySelectorAll('.noticias-promocoes__content');

    tabs.forEach((tab) => {
      tab.addEventListener('click', () => {
        tabs.forEach((t) => t.classList.remove('active'));
        contents.forEach((c) => c.classList.remove('active'));
        tab.classList.add('active');
        const target = tab.getAttribute('data-tab');
        document.getElementById(target).classList.add('active');
      });
    });
  });
</script>

{% schema %}
{
  "name": "News Blog",
  "class": "news-blog",
  "settings": [
    {
      "type": "header",
      "content": "Configure the section"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Notícias & Promoções"
    },
    {
      "type": "text",
      "id": "promotion_button_text",
      "label": "Promotion Button Text",
      "default": "Promoções"
    },
    { "type": "text", "id": "news_button_text", "label": "News Button Text", "default": "Notícias" },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "News Blog"
    }
  ]
}
{% endschema %}
