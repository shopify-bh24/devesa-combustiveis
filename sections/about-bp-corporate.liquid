{{ 'section-about-bp-corporate.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="about-bp-corporate color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="about-bp-corporate__container">
      <!-- Mission Section -->
      <div class="about-bp-corporate__mission">
        {%- if section.settings.mission_title != blank -%}
          <h2 class="about-bp-corporate__title">{{ section.settings.mission_title | escape }}</h2>
        {%- endif -%}
        
        {%- if section.settings.mission_description != blank -%}
          <p class="about-bp-corporate__description">{{ section.settings.mission_description }}</p>
        {%- endif -%}
        
        {%- if section.settings.mission_button_text != blank and section.settings.mission_button_link != blank -%}
          <a href="{{ section.settings.mission_button_link }}" class="about-bp-corporate__button about-bp-corporate__button--primary">
            {{ section.settings.mission_button_text | escape }}
          </a>
        {%- endif -%}
      </div>

      <!-- Values Section -->
      <div class="about-bp-corporate__values">
        {%- if section.settings.values_title != blank -%}
          <h3 class="about-bp-corporate__subtitle">{{ section.settings.values_title | escape }}</h3>
        {%- endif -%}
        
        <div class="about-bp-corporate__values-grid">
          {%- for block in section.blocks -%}
            {%- if block.type == 'value' -%}
              <div class="about-bp-corporate__value" {{ block.shopify_attributes }}>
                {%- if block.settings.value_icon != blank -%}
                  <div class="about-bp-corporate__value-icon">
                    {{ block.settings.value_icon }}
                  </div>
                {%- endif -%}
                
                {%- if block.settings.value_title != blank -%}
                  <h4 class="about-bp-corporate__value-title">{{ block.settings.value_title | escape }}</h4>
                {%- endif -%}
                
                {%- if block.settings.value_description != blank -%}
                  <p class="about-bp-corporate__value-description">{{ block.settings.value_description }}</p>
                {%- endif -%}
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>

      <!-- Sustainability Section -->
      <div class="about-bp-corporate__sustainability">
        {%- if section.settings.sustainability_title != blank -%}
          <h3 class="about-bp-corporate__subtitle">{{ section.settings.sustainability_title | escape }}</h3>
        {%- endif -%}
        
        {%- if section.settings.sustainability_description != blank -%}
          <p class="about-bp-corporate__sustainability-description">{{ section.settings.sustainability_description }}</p>
        {%- endif -%}
        
        {%- if section.settings.sustainability_button_text != blank and section.settings.sustainability_button_link != blank -%}
          <a href="{{ section.settings.sustainability_button_link }}" class="about-bp-corporate__button about-bp-corporate__button--secondary">
            {{ section.settings.sustainability_button_text | escape }}
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
